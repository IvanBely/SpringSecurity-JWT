<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.springframework.security" level="DEBUG" />
    <logger name="org.springframework.security.web" level="DEBUG" />
    <logger name="org.springframework.security.authentication" level="DEBUG" />
    <logger name="org.springframework.security.access" level="DEBUG" />
    <logger name="org.springframework.security.config" level="DEBUG" />
</configuration>
